<% layout('layouts/boilerplate') %>

<main class="form-div h-screen flex items-center justify-center">

    <form class="h-fit w-auto max-w-[90%] max-h-[90%] aspect-square bg-orange-400
     border-zinc-950 rounded-lg border-solid border-2
    flex flex-col justify-evenly items-center 
    text-lg py-2" action="/newTrail" method="post">
        <h1 class="text-2xl">New Trail </h1>
        <div class="flex justify-evenly items-center w-full h-10">
            <label for="trailName">Name:</label>
            <input class="w-1/2 h-full p-2" type="text" name="newTrailName" id="trailName" required>
        </div>
        <div class="flex justify-evenly items-center w-full h-10">
            <label for="trailOwner">Owner:</label>
            <input class="w-1/2 h-full p-2" type="text" name="newTrailOwner" id="trailOwner" required>
        </div>
        <div class="flex justify-evenly items-center w-full h-10">
            <label for="trailPrice">Price:</label>
            <div class="w-1/2 h-full flex items-center">
                <span class="w-2/12 h-full py-2 pl-3 bg- rounded-md rounded-r-none bg-green-600">$</span>
                <input class="w-10/12 p-2 h-full rounded-md rounded-l-none" value="" type="text" name="newTrailPrice"
                    id="trailPrice" required>
            </div>

        </div>
        <label for="trailLocation">Trail Location:</label>
        <div class="flex justify-evenly items-center w-full h-24">
            <div class="h-full trailCityAndState flex flex-col justify-evenly">
                <label for="trailCity">City:</label>
                <label for="trailCity">State:</label>
            </div>
            <div class="h-full w-1/2 trailCityAndState flex flex-col justify-evenly">
                <input class="h-10 p-2" type="text" name="newTrailCity" id="trailCity" required>
                <input class="h-10 p-2" type="text" name="newTrailState" id="trailState" required>
            </div>

        </div>
        <label for="">Tags:</label>
        <div class="border-2 bg-white flex flex-wrap justify-evenly h-24 w-5/6 overflow-y-scroll">
            <% for (let tag of tagTypes ) { %>
            <label class="" for="<%= tag %>-check-box"><%= tag %></label>
            <input class="mr-8" type="checkbox" name="<%=tag%>" id="<%= tag %>-check-box" <% } %>>
        </div>
        <button
            class="button w-1/3 h-10 text-xl text-black bg-green-700 hover:bg-yellow-500 hover:text-white transition-all duration-300"
            type="submit">Submit</button>
    </form>

</main>